/**
 * Implements hook_theme().
 */
function showntell_theme() {
  return [
    'showntell_hello_world' => [
      'variables' => ['params' => []],
      'template' => 'showntell',
      'path' => drupal_get_path('module', 'showntell') . '/templates',
    ],
  ];
}
